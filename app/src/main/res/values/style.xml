<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="outline_day" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/teal_200</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="filled_day" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/teal_200</item>
    </style>

    <style name="tv_label" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="tv_detail_content" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="btn_delete_outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="btn_delete" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/red</item>
    </style>

</resources>